@model IEnumerable<Academia.Models.Cargo>

@{
    ViewData["Title"] = "Index";
}

<h2>Cargos Empresariales</h2>

<p>
    <a asp-action="Create"><button class="btn btn-outline-primary mt-5">Crear Nuevo Cargo Empresarial</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a class="btn btn-outline-success mt-2" asp-action="Edit" asp-route-id="@item.CargoID">Editar</a> |
                <a class="btn btn-outline-info mt-2" asp-action="Details" asp-route-id="@item.CargoID">Ver Detalles</a> |
                <a class="btn btn-outline-danger mt-2" asp-action="Delete" asp-route-id="@item.CargoID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
