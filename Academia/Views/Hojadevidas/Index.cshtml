@model IEnumerable<Academia.Models.Hojadevida>

@{
    ViewData["Title"] = "Hoja de Vida";
}



<h2 class="mt-5">Hojas de Vida</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-dark mt-5">Crear Nueva Hoja de Vida</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TiempoExperiencia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TiempoExperiencia)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.HojadevidaID" class="btn btn-outline-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.HojadevidaID" class="btn btn-outline-success">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.HojadevidaID" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

