@model Academia.Models.Hojadevida

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Creando Hoja de vida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpleadoID" class="control-label"></label>
                <select asp-for="EmpleadoID" class ="form-control" asp-items="ViewBag.EmpleadoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Especialidad" class="control-label"></label>
                <input asp-for="Especialidad" class="form-control" />
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoExperiencia" class="control-label"></label>
                <input asp-for="TiempoExperiencia" class="form-control" />
                <span asp-validation-for="TiempoExperiencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger"> << Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
